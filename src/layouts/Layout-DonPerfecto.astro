---
import '@/styles/global.css';
import '@fontsource-variable/montserrat';

import Header from '@/sections/Header.astro';
import Footer from '@/sections/Footer.astro';
import FloatingCta from '@/components/FloatingCta.astro';

import NoiseBackground from '@/components/NoiseBackground.astro';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Barbería ubicada en Puebla. Especialistas en cortes modernos y clásicos, arreglo de barba y rituales premium. ¡Reserva tu cita hoy mismo!" />
    <meta name="keywords" content="barbería en Puebla, cortes de cabello para hombres, arreglo de barba, grooming masculino, Don Perfecto, barbería cerca de Ciudad Universitaria" />
    <meta name="author" content="Don Perfecto Barbería" />
    <meta name="robots" content="index, follow" />

    <link rel="canonical" href="https://glookbarber.com/" />
    <link rel="icon" type="image/svg+xml" href="/images/Don Perfecto-Logo.webp" />

    <meta name="generator" content={Astro.generator} />

    <title>Don Perfecto - Barbería ubicada en Puebla</title>

    <!-- Slot para inyectar head desde páginas -->
    <slot name="head" />
  </head>

  <body>
    <NoiseBackground />

    <!-- Encabezado -->
    <Header barber="Don Perfecto" />

    <main id="main-content" role="main" class="flex-grow">
      <slot />
	  <FloatingCta barber="Don Perfecto" number="5560908911" />
    </main>

    <Footer barber="Don Perfecto" >
      <p slot="direction">C. 10 Sur 7109, Loma Linda, 72477 Heroica Puebla de Zaragoza, Pue.</p>
    </Footer>
  </body>
</html>


<style>
  html {
    background: #000000;
  }
</style>
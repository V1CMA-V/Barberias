<style>
  @keyframes slideFadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-service-card {
    animation: slideFadeUp 0.6s ease-out both;
  }
</style>

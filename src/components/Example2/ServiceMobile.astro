---
const { services } = Astro.props as {
  services: {
    name: string;
    image: string;
    price: string;
    description: string;
    discount?: string;
    priceStudent?: string;
    benefits?: string[];
  }[];
}
---

<div class="md:hidden col-span-full grid grid-cols-1 gap-6 px-4 py-10">
  {services.map(({ name, discount, price, priceStudent }) => (
    <div class="border border-white/10 rounded-2xl p-4 bg-white/5 backdrop-blur-md shadow-md">
      <div class="flex justify-between items-center mb-2">
        <h4 class="font-semibold text-base text-white">{name}</h4>
        {discount && (
          <span
            class={`text-xs font-bold px-2 py-1 rounded ${
              discount === 'month'
                ? 'bg-yellow-500/20 text-yellow-300'
                : 'bg-blue-500/20 text-blue-300'
            }`}
          >
            {discount === 'month' ? 'Paquete del Mes' : 'Estudiante'}
          </span>
        )}
      </div>
      <div class="text-sm flex flex-col gap-1 text-white/90">
        <span>ðŸ’ˆ General: <strong>{price}</strong></span>
        {priceStudent && <span>ðŸŽ“ Estudiante: <strong>{priceStudent}</strong></span>}
      </div>
    </div>
  ))}
</div>

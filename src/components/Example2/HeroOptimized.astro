---
// HeroOptimized.astro

interface Props {
  image: string;
  alt?: string;
  class?: string;
  children?: any;
  oppacity?: boolean
}

const { image, alt = "Imagen de fondo", class: className, oppacity = false } = Astro.props;
---

<div class={`relative w-full h-full overflow-hidden ${className ?? ''}`}>
  <img
    src={image}
    alt={alt}
    class={`absolute inset-0 object-cover w-full h-full z-0 ${oppacity ? 'opacity-20 pointer-events-none' : ''}`}
    loading="lazy"
  />

  <div class="relative z-10 w-full h-full">
    <slot />
  </div>
</div>

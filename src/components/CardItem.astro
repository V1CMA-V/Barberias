---
interface Props {
  name: string
}
const { name } = Astro.props;
---
<div class="relative w-full max-w-sm aspect-[2/3] rounded-2xl overflow-hidden shadow-xl group">
  <!-- Imagen de fondo -->
  <img 
    src={`/images/team/${name}.webp`} 
    alt={`Fotografía de nuestro barbero ${name}`} 
    class="w-full h-full object-cover transition duration-500 group-hover:brightness-75"
    loading="lazy"
  />

  <!-- Sombra oscura al hacer hover -->
  <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

  <!-- Contenido (nombre y descripción con animación) -->
  <div class="absolute inset-x-0 bottom-6 px-6 z-10 transition-all duration-300 ">
    <!-- Nombre con animación de desplazamiento -->
    <span class="text-white text-lg sm:text-md font-light uppercase drop-shadow-md opacity-0 group-hover:opacity-100 transition-opacity duration-500">G-Look</span>
    <h2 class="text-white text-xl sm:text-2xl font-bold uppercase drop-shadow-md transform translate-y-[7.5rem] group-hover:translate-y-[0] transition-all duration-500">
      {name}
    </h2>

    <!-- Descripción con fade-in + delay -->
    <p class="translate-y-[3.5rem] group-hover:translate-y-[0] text-sm sm:text-base leading-snug max-w-full mt-2 opacity-0 transition-all duration-100 delay-100 group-hover:opacity-100">
      <slot />
    </p>
  </div>
</div>

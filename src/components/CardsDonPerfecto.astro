---
interface Barber {
  name: string;
  photo: string;
  description: string;
}

const barbers: Barber[] = [
  {
    name: "Carlos",
    photo: "/images/team/Carlos.webp",
    description: "Especialista en cortes clásicos con precisión y estilo.",
  },
  {
    name: "Luis",
    photo: "/images/team/Luis.webp",
    description: "Fade maestro y detalles nítidos en cada corte.",
  },
  {
    name: "Andrés",
    photo: "/images/team/Andres.webp",
    description: "Toque artístico y perfeccionismo en barba y cabello.",
  },
  {
    name: "Francisco",
    photo: "/images/team/Francisco.webp",
    description: "Toque artístico y perfeccionismo en barba y cabello.",
  },
  {
    name: "Jorge",
    photo: "/images/team/Jorge.webp",
    description: "Toque artístico y perfeccionismo en barba y cabello.",
  },
];
---

<section id="Team" class="py-24 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="flex overflow-x-auto gap-6 snap-x snap-mandatory scrollbar-hide">
        {barbers.map((barber) => (
          <div
            class="relative group min-w-[280px] md:min-w-[340px] h-[460px] md:h-[520px] rounded-xl overflow-hidden border border-don-gold shadow-xl snap-center"
          >
            <!-- Imagen -->
            <img
              src={barber.photo}
              alt={barber.name}
              class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
            />
  
            <!-- Nombre fijo abajo -->
            <div class="absolute bottom-0 w-full text-center text-don-gold text-xl font-semibold bg-gradient-to-t from-black/70 to-transparent py-3">
              {barber.name}
            </div>
  
            <!-- Descripción al hacer hover -->
            <div
              class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-black/70 backdrop-blur-sm text-white px-4 flex items-center justify-center text-center"
            >
              <p class="text-sm md:text-base leading-snug">{barber.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

---
import Facebook from "./Icons/Facebook.astro";
import Instagram from "./Icons/Instagram.astro";
import WhatsApp from "./Icons/WhatsApp.astro";

interface Props {
  barber: string
}

const { barber } = Astro.props

const facebook = barber === "G-Look" ? "glook_barber" : "barberia.donperfecto"
const insta = barber === "G-Look" ? "g_look.barber" : "don.perfecto"
const phone = barber === "G-Look" ? "5560908911" : "5625183720"
---

<section class="w-full max-w-6xl mx-auto px-6 py-20">
  <div class="flex flex-wrap items-center justify-center gap-12">
    
    <a 
      href={`https://www.facebook.com/${facebook}`} 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Ir a nuestro perfil de Facebook"
      class="hover:scale-110 transition-transform duration-300"
    >
      <Facebook color="#1877F2" class="w-20 h-20" />
    </a>

    <a 
      href={`https://www.instagram.com/${insta}`} 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Ir a nuestro perfil de Instagram"
      class="hover:scale-110 transition-transform duration-300"
    >
      <Instagram color="#E1306C" class="w-20 h-20" />
    </a>

    <a 
      href={`https://wa.me/${phone}`} 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Abrir conversaciÃ³n por WhatsApp"
      class="hover:scale-110 transition-transform duration-300"
    >
      <WhatsApp color="#25D366" class="w-20 h-20" />
    </a>

  </div>
</section>

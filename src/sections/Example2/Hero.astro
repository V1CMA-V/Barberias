---
import HeroOptimized from "@components2/HeroOptimized.astro";
import ButtonReserv from "@components2/Button_reserv.astro";

interface Props {
  name: string,
  label: string,
  phone: string
}

const { name, label, phone } = Astro.props
---

<section class="relative w-full min-h-screen overflow-hidden">
  <HeroOptimized image={"/hero.webp"} alt="Corte de cabello estilo G-Look" class="mask-fade-bottom">
    <div class="flex flex-col items-center justify-center h-screen text-center px-6 gap-4 animate-blurred-fade-in">
      <h1 transition:name="barber-name" class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-extrabold leading-tight  drop-shadow-lg">{name}</h1>
      <h2 class="text-lg sm:text-xl md:text-2xl font-medium ">{label}</h2>
      <p class="max-w-xl text-sm sm:text-base md:text-lg text-white/90 leading-relaxed">
        <slot />
      </p>
      <ButtonReserv name={name} phone={phone}>Reserva tu cita ahora</ButtonReserv>
    </div>
  </HeroOptimized>
</section>

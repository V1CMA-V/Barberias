---
// Hero.astro
import { Image } from 'astro:assets';

const { logo, name, summary } = Astro.props as {
  /** URL o path al asset que sirve de fondo */
  logo: string;
  /** Nombre de la barbería */
  name: string;
  /** Texto descriptivo bajo el título */
  summary: string;
};
---

<section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden mb-24">
  <!-- Fondo optimizado con Astro Image -->
  <Image
    src={logo}
    alt=""
    width={1920}      
    height={1080}     
    loading="lazy"
    class="absolute inset-0 object-cover -z-20 pointer-events-none opacity-40 mask-fade-vertical"
    aria-hidden="true"
  />

  <!-- Overlay degradado para mejorar contraste -->
  <!-- <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-transparent pointer-events-none -z-10"></div> -->

  <!-- Contenedor de contenido -->
  <div
    class="
      relative
      z-10
      max-w-3xl
      mx-auto
      flex flex-col items-center justify-center
      gap-6
      text-center
    "
  >
    <h1
      transition:name="barber-name"
      class="
        text-3xl sm:text-4xl md:text-5xl
        font-serif font-medium
        text-white
        uppercase
        leading-tight
        drop-shadow-md
      "
    >
      Barbería<br />
      <strong class="hover:text-fenix-accent transition duration-300">{name}</strong>
    </h1>

    <p class="text-base text-white">{summary}</p>

    <a
  href="/"
  role="button"
  class=""
>
  <span class="
    mt-6 inline-block px-6 py-3
    rounded-lg border border-fenix-accent
    text-fenix-accent font-semibold
    transition-colors duration-300 ease-in-out
    hover:bg-fenix-accent/85 hover:text-white 
    motion-safe:animate-fade-in"
    >
    Reservar cita
  </span>
</a>

  </div>
</section>

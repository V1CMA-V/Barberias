---
const { name, about } = Astro.props as {
    name: string
    about: {
        description: string[]
    }
}

const { description } = about
---

<section 
    class="
    flex items-center justify-between gap-10
    max-w-5xl mx-auto
    my-24
">
    <!-- Image -->
    <div class="bg-cover w-full h-full relative">
        <img id="animate-rotation" src="/images/example3/label.png" alt="" class="w-full h-full object-cover">
        <span class="bling text-[#6d9484] font-bold text-7xl don absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">T</span>
    </div>
    <!-- Information -->
    <div id="animate-text" class="flex flex-col gap-4">
        <h3 class="text_glowing text-fenix-accent font-bold text-xl">Story</h3>
        <h2 class="text_glowing don font-bold text-4xl text-center text-[#6d9484]">{name}</h2>
        <div class="text-pretty">
            {description.map((item) => (
                <p><span class="text-white font-normal">{item}</span></p>
            ))}
        </div>
    </div>
</section>

<style>
    #animate-rotation {
        animation: rotation-image linear both;
        animation-timeline: view();
        animation-range: entry 20% cover 50%;
    }

    #animate-text {
        animation: come-text linear both;
        animation-timeline: view();
        animation-range: entry 20% cover 50%;
    }

    @keyframes come-text {
        from {
            opacity: 0;
            translate: 100px 0;
        }
        to {
            opacity: 1;
            translate: 0 0;
        }
    }
    
    @keyframes rotation-image {
        to {
            scale: 1.2;
            rotate: 360deg;
        }
    }
</style>
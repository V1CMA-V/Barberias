---
import { Image } from 'astro:assets'

const { name, logo } = Astro.props as {
  name: string
  logo: string
}
---

<footer
  class='w-full border-t border-white/10 py-10 text-sm text-white/80 bg-transparent pb-20 md:pb-10'
  aria-label='Pie de página'
>
  <div class='max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-start gap-6 px-6'>
    <!-- Logo + marca -->
    <div class='flex items-center gap-3 text-center md:text-left'>
      <Image
        src={logo}
        alt={`Logo de la barbería ${name}`}
        width={14}
        height={14}
        class='w-14 h-14 rounded-full object-cover'
        loading='lazy'
      />
      <p>
        Barbería <span class='font-bold hover:underline hover:text-don-gold transition-colors'
          >{name}</span
        >.<br />
        © 2025 Todos los derechos reservados.
      </p>
    </div>

    <!-- CTA de contacto -->
    <a
      href='https://vicma.vercel.app'
      target='_blank'
      rel='noopener noreferrer'
      class='text-don-gold hover:underline text-center md:text-right transition-colors'
      aria-label='Ir al portafolio del desarrollador'
    >
      ¿Te interesa una página como esta para tu negocio? Contáctame.
    </a>
  </div>
</footer>

---
import Locate from "@/components/Icons/Locate.astro";
---

<footer id="footer" class="bg-black  py-10 mt-10 border-t border-white/10">
  <div class="w-full max-w-screen-xl mx-auto px-6 flex flex-col gap-8">

    <!-- Sección superior -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-10">

      <!-- Logo y nombre -->
      <a href="/" class="flex items-center gap-4">
        <img src="/images/favicon.webp" alt="Logo de G-Look" class="w-14 h-14 rounded-full shadow" />
        <span class="text-2xl font-bold uppercase">G-Look</span>
      </a>

      <!-- Dirección con ícono -->
      <a 
        href="https://maps.app.goo.gl/1w1kjpXu1EMXbn8N9"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 hover:text-sisal-400 transition text-center justify-center"
      >
        <Locate />
        <span class="text-sm leading-snug">
          Privada 71 A Ote. 801, Loma Linda, 72477<br />
          Puebla, Pue. (Junto a Ciudad Universitaria)
        </span>
      </a>

      <!-- Redes sociales -->
      <div class="flex gap-6 text-sm justify-center">
        <a href="https://www.facebook.com/glook_barber/" target="_blank" rel="noopener noreferrer" class="hover:text-[#1877F2] transition">
          Facebook
        </a>
        <a href="https://www.instagram.com/glook_barber/" target="_blank" rel="noopener noreferrer" class="hover:text-[#EF4B5F] transition">
          Instagram
        </a>
        <a href="https://wa.me/12228554038" target="_blank" rel="noopener noreferrer" class="hover:text-[#25D366] transition">
          WhatsApp
        </a>
      </div>
    </div>

    <!-- Separador -->
    <hr class="border-white/10" />

    <!-- Copyright -->
    <p class="text-center text-xs ">
      © 2025 <a href="/" class="hover:underline font-semibold hover:text-sisal-600">G-Look™</a>. Todos los derechos reservados.
    </p>
  </div>
</footer>

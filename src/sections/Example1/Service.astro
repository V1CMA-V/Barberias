---
import Bento from '@components1/Bento.astro';

const { services } = Astro.props as {
  services: {
    specialPack?: string[]
    name: string;
    price: string;
    image: string;
    description: string;
    discount?: string;
    benefits?: string[];
  }[];
}
---

<section id="Service" class=" px-6">
  <div class="max-w-6xl pb-20 mx-auto">
    <h2 class="text-4xl sm:text-5xl uppercase tracking-wide font-semibold text-center bling mb-9">
      Servicios
    </h2>

    <!-- Bento -->
    <Bento services={services} />
     
    <p class="text-lg text-center text-balance">
      <strong class="text-don-gold text-3xl">¿Eres estudiante?</strong><br/> Presenta tu credencial vigente y obtén un descuento especial en servicios seleccionados.
    </p>
   
</section>

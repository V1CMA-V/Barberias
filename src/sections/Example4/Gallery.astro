  {
    src: '/images/example3/gallery-4.webp',
    alt: 'Detalle de tijeras',
    col: 'col-span-1 sm:col-span-1 md:col-span-2',
    row: 'row-span-1 sm:row-span-1 md:row-span-2',
  },
  {
    src: '/images/example3/gallery-5.webp',
    alt: 'Detalle de tijeras',
    col: 'col-span-2 sm:col-span-2 md:col-span-1',
    row: 'row-span-2 sm:row-span-2 md:row-span-1',
  },
]
---

<section class='pt-5 pb-24'>
  <div
    id='gallery-grid'
    class='max-w-7xl mx-auto px-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 auto-rows-[150px] sm:auto-rows-[200px] md:auto-rows-[250px] gap-4'
  >
    {
      gallery.map(({ src, alt, col, row }) => (
        <a
          href={src}
          data-pswp-width='800'
          data-pswp-height='600'
          target='_blank'
          rel='noreferrer'
          class={`relative overflow-hidden rounded-lg ${col} ${row} animate-view group`}
        >
          <img
            src={src}
            alt={alt}
            class='object-cover w-full h-full transition-transform duration-500 group-hover:scale-105'
            loading='lazy'
          />
        </a>
      ))
    }
  </div>
  <LightboxGallery client:load />
</section>

<style>
  @keyframes view {
    from {
      opacity: 0;
      translate: 0 200px;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }

  .animate-view {
    animation: view linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 40%;
  }
</style>

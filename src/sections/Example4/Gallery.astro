    alt: 'Retoque de barba',
    col: 'col-span-1',
    row: 'row-span-1',
  },
  {
    src: '/images/example3/gallery-4.webp',
    alt: 'Sala de espera',
    col: 'col-span-1',
    row: 'row-span-1',
  },
  {
    src: '/images/example3/gallery-5.webp',
    alt: 'Retoque de barba',
    col: 'col-span-1',
    row: 'row-span-1',
  },
  {
    src: '/images/example3/gallery-6.webp',
    alt: 'Barberos con cliente',
    col: 'col-span-2',
    row: 'row-span-1',
  },
  {
    src: '/images/example3/gallery-2.webp',
    alt: 'Detalle de tijeras',
    col: 'col-span-1',

---

<section class="pt-5 pb-24 ">
    <div class="grid grid-cols-4 gap-4">
        {gallery.map(({ src, alt, col, row }) => (
            <div id="animation-gallery" class={`${col} ${row}`}>
                <Image src={src} alt={alt} width={800} height={600} class="object-cover w-full h-full transition-transform duration-500" loading="lazy" />
            </div>
        ))}
    </div>
</section>

<style>
    #animation-gallery {
        animation: view linear both;
        animation-timeline: view();
        animation-range: entry 20% cover 40%;
    }
    
    @keyframes view {
        from {
            opacity: 0;
            translate: 0 200px;
        }
        
        to {
            opacity: 1;
            translate: 0 0;
            
        }
    }
</style>
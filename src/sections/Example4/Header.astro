---
import HeaderLink from "@components3/HeaderLink.astro";
---

<header id="Header-scroll" class="pt-9 fixed top-0 w-full px-6 py-4 z-50 bg-transparent scale-150">
    <div class="max-w-3xl mx-auto pt-9 border-t-2 border-white flex items-center justify-center gap-8 lg:gap-16">
       
        <HeaderLink class="text_glowing font-bold " checkActive={false} href="#services">
            Servicios
        </HeaderLink>
        
        <HeaderLink class="text_glowing font-bold " checkActive={false} href="#contact">
            Contacto
        </HeaderLink>
        <HeaderLink class="text_glowing font-bold " checkActive={false} href="#about">
            Sobre nosotros
        </HeaderLink>

        
    </div>
</header>

<style>
    #Header-scroll {
        animation: enhance-header-3 linear both;
        animation-timeline: scroll(root);
        animation-range: 0 300px;
    }

    @keyframes enhance-header-3 {
        to {
            box-shadow:
            0px 5px 50px -5px rgba(0, 0, 0, 0.1),
            0px 0px 0 1px rgba(0, 0, 0, 0.3);
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            scale: 1;
        }
    }
</style>
---
// src/components/Footer.astro
import { Image } from 'astro:assets';

interface Props {
  name: string;
  email: string;
  phone: string;
  socialMedia: { network: string; color: string; url: string }[];
  location: {
    address: string;
    google_link: string;
  };
}

const { name, email, phone, socialMedia, location } = Astro.props as Props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-black/50 text-white py-12">
  <!-- Columnas principales -->
  <div class="max-w-5xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-center">
    <!-- Contacto -->
    <div class="flex flex-col space-y-3 ">
      <h3 class="text-2xl font-bold uppercase tracking-wide bling">Contacto</h3>
      <ul class="space-y-2">
        <li>
          <a href="#services" class="text-pretty hover:text-don-gold transition">
            Servicios
          </a>
        </li>
        <li>
          <a href="#contact" class="text-pretty hover:text-don-gold transition">
            Contacto
          </a>
        </li>
        <li>
          <a href={`mailto:${email}`} class="text-pretty hover:text-don-gold transition">
            {email}
          </a>
        </li>
        <li>
          <a href={`tel:${phone}`} class="text-pretty hover:text-don-gold transition">
            {phone}
          </a>
        </li>
        <li>
          <a
            href={`https://wa.me/${phone}`}
            class="text-pretty hover:text-[#25D366] transition"
          >
            WhatsApp
          </a>
        </li>
      </ul>
    </div>

    <!-- Redes Sociales -->
    <div class="flex flex-col space-y-3 items-center">
      <img src="/images/footer-img.svg" alt="{name} Footer" class="w-36 h-36 bg-cover ">
      <h3 class="text-2xl font-bold uppercase tracking-wide bling">Redes Sociales</h3>
      <div class="flex space-x-4">
        {socialMedia.map(({ network, url, color }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={network}
            style={`color: ${color}`}
            class="text-xl hover:opacity-80 transition-opacity"
          >
            {network}
          </a>
        ))}
      </div>
      <img src="/images/footer-img.svg" alt="{name} Footer" class="w-36 h-36 bg-cover ">
    </div>

    <!-- Ubicación -->
    <div class="flex flex-col space-y-3">
      <h3 class="text-2xl font-bold uppercase tracking-wide bling">Ubicación</h3>
      <address class="not-italic space-y-2 text-pretty">
        <p>{location.address}</p>
        <a
          href={location.google_link}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-don-gold transition"
        >
          Ver en Google Maps
        </a>
      </address>
    </div>
  </div>

  <!-- Pie de página -->
  <div class="mt-12 border-t border-white/20 pt-8 flex flex-col items-center space-y-4">
    <Image
      src="/images/El Templo-Logo.webp"
      alt={`${name} logo`}
      width={80}
      height={80}
      class="rounded-full object-cover"
      loading="lazy"
    />
    <p class="text-pretty text-sm">
      © {currentYear} {name}. Todos los derechos reservados.
    </p>
  </div>
</footer>

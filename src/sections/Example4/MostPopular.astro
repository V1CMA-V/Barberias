---
// src/sections/Popular.astro
import { Image } from 'astro:assets';

const items = [
  {
    title: 'Cortes de Cabello',
    subtitle: 'Los mejores cortes de cabello para hombres',
    img: '/images/haircut/corte-clasico.webp',
    href: '#services',
  },
  {
    title: 'Cuidado Personal',
    subtitle: 'Los mejores cuidados para hombres',
    img: '/images/haircut/ritual-premium.webp',
    href: '#services',
  },
];
---

<section
  id="popular"
  class="grid grid-cols-1 md:grid-cols-2 min-h-screen mb-24"
>
  {items.map((item) => (
    <div class="relative flex items-center justify-center p-8 h-full overflow-hidden">
      <!-- Imagen de fondo -->
      <Image
        src={item.img}
        alt=""
        width={1920}
        height={1080}
        loading="lazy"
        class="absolute inset-0 object-cover -z-20 opacity-40 mask-fade-vertical w-full h-full"
        aria-hidden="true"
      />

      <!-- Overlay oscuro -->
      <div class="absolute inset-0 bg-black/50 -z-10"></div>

      <!-- Contenido -->
      <div class="relative z-10 max-w-md text-center text-white space-y-4">
        <h3 class="text-3xl md:text-4xl font-serif font-semibold uppercase">
          {item.title}
        </h3>
        <p class="text-base md:text-lg">{item.subtitle}</p>
        <a
          href={item.href}
          class="inline-block px-6 py-3 border border-white rounded-full uppercase font-medium
                 hover:bg-white hover:text-gray-900 transition"
        >
          Ver servicios
        </a>
      </div>
    </div>
  ))}
</section>

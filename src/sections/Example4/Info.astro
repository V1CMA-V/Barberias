---
// src/sections/InfoSection.astro
import { Image } from 'astro:assets';

interface Props {
  name: string;
  about: {
    description: string[];
  };
}

const { name, about } = Astro.props as Props;
---

<section
  id="about"
  class="py-20 bg-white backdrop-blur-lg overflow-hidden text-black"
  aria-label="Sobre Nosotros"
>
  <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
    <!-- Imagen de referencia -->
    <div class="w-full h-80 md:h-[28rem] lg:h-[32rem] overflow-hidden rounded-2xl shadow-lg">
      <Image
        src="/images/example3/gallery-2.webp"
        alt="Interior de la barbería El Templo"
        width={1200}
        height={800}
        class="object-cover w-full h-full"
        loading="lazy"
      />
    </div>

    <!-- Texto descriptivo -->
    <div class="space-y-6 flex flex-col items-center justify-center">
      <h4 class="text-2xl  font-medium uppercase tracking-wide border-b-2 border-black py-2">
        Somos una barbería que marca la diferencia
      </h4>
      <h3 class="text-3xl md:text-4xl font-serif font-bold uppercase leading-tight text-balance">
        Cortes y arreglos personalizados en <span class="text-don-gold">{name}</span>
      </h3>
      <div class="space-y-4 font-normal text-base md:text-lg leading-relaxed text-pretty">
        {about.description.map((paragraph) => (
          <p><span class="font-normal">{paragraph}</span></p>
        ))}
      </div>
      <a
        href="#services"
        class="
          inline-block
          px-6 py-3
          bg-don-gold text-gray-900 font-semibold
          rounded-full
          hover:bg-don-gold/90
          transition
        "
      >
        Nuestros Servicios
      </a>
    </div>
  </div>
</section>

---
import { Image } from 'astro:assets'

interface Props {
  name: string
  about: {
    description: string[]
  }
}

const { name, about } = Astro.props as Props
---

<section id='about' class='min-h-screen mb-24 bg-white' aria-label='Sección sobre la barbería'>
  <div class='max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-12 items-center py-24'>
    <!-- Imagen con animación -->
    <div
      class='w-full h-80 md:h-[28rem] lg:h-[32rem] overflow-hidden rounded-2xl shadow-lg animate-fade-left'
    >
      <Image
        src='/images/example3/gallery-2.webp'
        alt='Interior de la barbería {name}'
        width={1200}
        height={800}
        class='object-cover w-full h-full'
        loading='lazy'
      />
    </div>

    <!-- Texto descriptivo con animación -->
    <div class='space-y-6 flex flex-col items-center justify-center animate-fade-right'>
      <h4 class='text-2xl font-medium uppercase tracking-wide border-b-2 border-black py-2'>
        Somos una barbería que marca la diferencia
      </h4>
      <h3 class='text-3xl md:text-4xl font-serif font-bold uppercase leading-tight text-balance'>
        Cortes y arreglos personalizados en <span class='text-don-gold'>{name}</span>
      </h3>
      <div class='space-y-4 font-normal text-base md:text-lg leading-relaxed text-pretty'>
        {
          about.description.map(paragraph => (
            <p class=''>
              <span class='font-normal text-black opacity-100/90'>{paragraph}</span>
            </p>
          ))
        }
      </div>
      <a
        href='#services'
        class='inline-block px-6 py-3 bg-don-gold text-gray-900 font-semibold rounded-full hover:bg-don-gold/90 transition text-center'
      >
        Nuestros Servicios
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-left {
    from {
      opacity: 0;
      translate: -100px 0;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }

  .animate-fade-left {
    animation: fade-left linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 40%;
  }

  @keyframes fade-right {
    from {
      opacity: 0;
      translate: 100px 0;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }

  .animate-fade-right {
    animation: fade-right linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 35%;
  }
</style>

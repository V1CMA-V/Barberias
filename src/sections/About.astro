---
import AboutContent from "@/components/About/AboutContent.astro";
import AboutStats from "@/components/About/AboutStats.astro";
import aboutImage from "@/assets/images/about.webp";
import { Image } from "astro:assets";

interface Props {
  name: string
  citas: number
  seguidores: number
}

const { name, citas, seguidores } = Astro.props
---

<section id="About" class="w-full max-w-[1400px] mx-auto my-24 gap-10 text-pretty px-6 text-left text-xl sm:px-20 flex flex-col md:flex-row items-center justify-between p-6 md:p-8">
  
  <!-- Texto -->
  <div id="theater-text" class="flex flex-col gap-10">
    <h2 class="text-4xl sm:text-5xl uppercase tracking-wide font-semibold text-center lg:text-left bling">
      Sobre Nosotros
    </h2>

    <AboutContent name={name} />

    <AboutStats citas={citas} seguidores={seguidores} />
  </div>

  <!-- Imagen -->
  <div id="theater" class="rounded-2xl overflow-hidden mask-fade-upper w-full h-full">
    <Image
      src={aboutImage}
      alt={`Interior de la barberÃ­a ${name}`}
      class="object-cover w-full h-full "
      width={800}
      height={900}
      loading="lazy"
    />
  </div>
</section>

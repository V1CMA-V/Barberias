---
import NoiseBackground from '@/components/NoiseBackground.astro'
import LayoutBarberia from '@/layouts/LayoutBarberia.astro'
import '@/styles/global.css'
import { Image } from 'astro:assets'

const examples = [
  {
    title: 'Example 1',
    href: '/Example1',
    img: '/Example3.webp',
    alt: 'Landing page Example 1',
    description: 'Estilo, calidad y comodidad en cada corte de pelo.',
    delay: 'animate-delay-100',
  },
  {
    title: 'Example 2',
    href: '/Example2',
    img: '/Example2.webp',
    alt: 'Landing page Example 2',
    description: 'Diseño moderno y experiencia premium para tu barbería.',
    delay: 'animate-delay-200',
  },
  {
    title: 'Example 3',
    href: '/Example3',
    img: '/Example1.webp',
    alt: 'Landing page Example 3',
    description: 'Landing page optimizada para conversión y reservas.',
    delay: 'animate-delay-300',
  },
  {
    title: 'Example 4',
    href: '/Example4',
    img: '/Example4.webp',
    alt: 'Landing page Example 4',
    description: 'Landing page optimizada para conversión y reservas.',
    delay: 'animate-delay-400',
  },
]
---

<LayoutBarberia
  title='Portafolio | Víctor Martínez'
  summary='Mis proyectos de landing pages para barberías'
  url='https://vicma.vercel.app'
  icon='/favicon.svg'
>
  <NoiseBackground />

  <main class='flex flex-col items-center justify-center py-20 px-6'>
    <section class='text-center max-w-3xl mx-auto mb-16'>
      <hgroup>
        <h1 class='text-4xl md:text-5xl font-serif font-bold text-white mb-2'>
          Portafolio de Landings
        </h1>
        <h2
          class='text-2xl md:text-3xl font-serif font-semibold text-white text-balance mb-4'
          transition:name='barber-name'
        >
          El Templo
        </h2>
      </hgroup>
      <p class='text-white/80 max-w-xl mx-auto text-pretty'>
        Aquí tienes algunos de los proyectos de landing pages que he desarrollado para barberías.
        Haz clic en cualquiera para verlo en vivo.
      </p>
    </section>

    <section class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-7xl'>
      {
        examples.map(({ title, href, img, alt, description, delay }) => (
          <article class={`animate-swing-drop-in ${delay} `}>
            <a
              href={href}
              aria-label={`Ver demo de ${title}`}
              class='group block overflow-hidden rounded-2xl bg-white/10 backdrop-blur-md hover:bg-white/20 transition'
            >
              <div class='w-full h-48 md:h-56 lg:h-64 overflow-hidden'>
                <Image
                  src={img}
                  alt={alt}
                  width={800}
                  height={600}
                  class='object-cover w-full h-full transition-transform duration-500 group-hover:scale-105'
                  loading='lazy'
                />
              </div>
              <div class='p-6'>
                <h3 class='text-2xl font-semibold text-white mb-2'>{title}</h3>
                <p class='text-white/80'>{description}</p>
              </div>
            </a>
          </article>
        ))
      }
    </section>
  </main>
</LayoutBarberia>

<style>
  html {
    background: #000;
  }
</style>

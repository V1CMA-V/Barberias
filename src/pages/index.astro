---
import '@/styles/global.css'

import NoiseBackground from '@/components/NoiseBackground.astro'
import Layout from '@/layouts/LayoutBarberia.astro'
---

<Layout title="404 - Pagina no encontrada" >
  <NoiseBackground />

  <main class="flex flex-col items-center justify-center h-screen gap-3">
    <h1 class="text-4xl font-bold text-white text-balance">Dev Víctor Manuel Martínez Cruz</h1>
    <p class="text-white/90 text-balance">Desarrollador web con experiencia en el desarrollo de aplicaciones web y aplicaciones móviles.</p>

    <a href="https://vicma.vercel.app/" class="text_glowing
                    text-sm 
                    button
                    w-fit
                    font-medium
                    no-underline
                    px-5
                    py-3
                    border
                    border-solid
                    border-white
                    rounded-full
                    uppercase
                    text-pretty">Volver a la página de inicio</a>
  </main>
  
</Layout>

<style>
  html {
    background: #000000;
  }

  .button {
    transition:
      text-shadow 0.5s ease-out,
      box-shadow 0.3s ease-out;
  }

  .button:hover {
    box-shadow: 0 0 10px #fff;
    text-shadow:
      1px 1px 20px #fff;
  }
</style>

---
// src/pages/index.astro
import '@/styles/global.css';
import NoiseBackground from '@/components/NoiseBackground.astro';
import LayoutBarberia from '@/layouts/LayoutBarberia.astro';
import { Image } from 'astro:assets';

const examples = [
  {
    title: 'Example 1',
    href: '/Example1',
    img: '/Example3.webp',
    alt: 'Landing page Example 1',
    description: 'Estilo, calidad y comodidad en cada corte de pelo.',
  },
  {
    title: 'Example 2',
    href: '/Example2',
    img: '/Example2.webp',
    alt: 'Landing page Example 2',
    description: 'Diseño moderno y experiencia premium para tu barbería.',
  },
  {
    title: 'Example 3',
    href: '/Example3',
    img: '/Example1.webp',
    alt: 'Landing page Example 3',
    description: 'Landing page optimizada para conversión y reservas.',
  },
];
---
<LayoutBarberia title="Portafolio – Víctor Martínez" summary="Mis proyectos de landing pages para barberías" url="https://vicma.vercel.app" icon="/favicon.svg">
  <!-- Fondo animado -->
  <NoiseBackground />

  <main class="flex flex-col items-center justify-center py-20 px-6">
    <!-- Encabezado -->
    <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-4 text-center">
      Portafolio de Landings
    </h1>
    <h2 transition:name="barber-name" class="text-2xl md:text-3xl font-serif font-bold text-white mb-4 text-center">
      El Templo
    </h2>
    <p class="text-white/80 mb-12 text-center max-w-2xl">
      Aquí tienes algunos de los proyectos de landing pages que he desarrollado para barberías. Haz clic en cualquiera para verlo en vivo.
    </p>

    <!-- Grid de ejemplos -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-7xl">
      {examples.map((ex) => (
        <a
          href={ex.href}
          class="group block overflow-hidden rounded-2xl bg-white/10 backdrop-blur-md hover:bg-white/20 transition"
          scroll-behavior="smooth"
        >
          <!-- Imagen optimizada -->
          <div class="w-full h-48 md:h-56 lg:h-64 overflow-hidden">
            <Image
              src={ex.img}
              alt={ex.alt}
              width={800}
              height={600}
              class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
          </div>

          <!-- Texto -->
          <div class="p-6">
            <h2 class="text-2xl font-semibold text-white mb-2">{ex.title}</h2>
            <p class="text-white/80">{ex.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</LayoutBarberia>

<style>
  html {
    background: #000000;
  }
</style>
